<div
  class="page"
  data-o-type="object"
  data-o-key-id="{{currentItem.id}}"
>
  <a class="text-link block m-b-32" href="/{{pageAuthor.details.username}}">Go back</a>
  <h2 class="page__heading">{{currentItem.name}}</h2>
  <div 
    class="todos"
    data-o-key="todos"
    data-o-type="list"
  >
    {{#each currentItem.todos}}
      {{> todo todo=this pageAuthor=@root.pageAuthor}}
    {{/each}}
  </div>
  <div class="flex justify-content--flex-end">
    <button 
      class="button"
      data-i-new="todo"
    >Add Todo</button>
  </div>
</div>
